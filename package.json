{
  "name": "react-chat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "express": "^4.15.3",
    "immutable": "^3.8.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "node-sass-chokidar": "0.0.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "react-scripts": "1.0.10",
    "@storybook/react": "^3.2.3"
  },
  "scripts": {
    "build-css": "node-sass-chokidar scss/ -o public/styles/",
    "watch-css": "npm run build-css && node-sass-chokidar scss/ -o public/styles/ --watch --recursive",
    "api": "nodemon ./chat-api/chat.js",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js api",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  }
}
